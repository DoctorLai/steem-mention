{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}
    <div class="container" style="margin-top: 50px;">
        <div class="row">
            <div class="col-sm-12 col-md-4 col-md-offset-4">
                <form method="post" action="">
                    <div class="form-group">
                        <label for="username">Please input your steemit username</label>
                        <input type="text" name="username" class="form-control" value="{{ user.username }}" placeholder="Your steemit username">
                    </div>
                    <div class="form-group">
                        <p><b>Which to notify?</b></p>
                        <div class="checkbox">
                            <label>
                                <input name="settings[replies]" type="checkbox" {{ settings['replies'] == 'on' ? 'checked="checked"' : '' }}> Replies
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
<style type="text/css">
</style>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
    </script>
{% endblock %}